{
  "name": "portforio",
  "version": "1.0.0",
  "description": "森山智哉のPortforioです",
  "author": "tomoya moriyama",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "fix_lint": "eslint --quiet --fix --ext .js,.vue --ignore-path .gitignore ."
